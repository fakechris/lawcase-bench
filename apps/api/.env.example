# Third-Party Service Integration Configuration
# Copy this file to .env and fill in your actual values

# Phone Service Configuration (Twilio)
PHONE_SERVICE_ENABLED=true
PHONE_SERVICE_PROVIDER=twilio
PHONE_SERVICE_API_KEY=your_twilio_account_sid
PHONE_SERVICE_API_SECRET=your_twilio_auth_token
PHONE_SERVICE_BASE_URL=
PHONE_SERVICE_TIMEOUT=30000
PHONE_SERVICE_RETRY_ATTEMPTS=3
PHONE_SERVICE_RETRY_DELAY=1000
PHONE_SERVICE_WEBHOOK_SECRET=your_twilio_webhook_secret

# SMS Service Configuration (Twilio)
SMS_SERVICE_ENABLED=true
SMS_SERVICE_PROVIDER=twilio
SMS_SERVICE_API_KEY=your_twilio_account_sid
SMS_SERVICE_API_SECRET=your_twilio_auth_token
SMS_SERVICE_BASE_URL=
SMS_SERVICE_TIMEOUT=30000
SMS_SERVICE_RETRY_ATTEMPTS=3
SMS_SERVICE_RETRY_DELAY=1000
SMS_SERVICE_WEBHOOK_SECRET=your_twilio_webhook_secret

# Email Service Configuration (SendGrid)
EMAIL_SERVICE_ENABLED=true
EMAIL_SERVICE_PROVIDER=sendgrid
EMAIL_SERVICE_API_KEY=your_sendgrid_api_key
EMAIL_SERVICE_BASE_URL=
EMAIL_SERVICE_TIMEOUT=30000
EMAIL_SERVICE_RETRY_ATTEMPTS=3
EMAIL_SERVICE_RETRY_DELAY=1000
EMAIL_SERVICE_WEBHOOK_SECRET=your_sendgrid_webhook_secret

# File Storage Service Configuration (AWS S3)
FILE_STORAGE_SERVICE_ENABLED=true
FILE_STORAGE_SERVICE_PROVIDER=aws-s3
FILE_STORAGE_SERVICE_API_KEY=your_aws_access_key_id
FILE_STORAGE_SERVICE_API_SECRET=your_aws_secret_access_key
FILE_STORAGE_SERVICE_BASE_URL=
FILE_STORAGE_SERVICE_TIMEOUT=30000
FILE_STORAGE_SERVICE_RETRY_ATTEMPTS=3
FILE_STORAGE_SERVICE_RETRY_DELAY=1000
FILE_STORAGE_SERVICE_WEBHOOK_SECRET=your_s3_webhook_secret
AWS_S3_BUCKET_NAME=your_bucket_name
AWS_REGION=us-east-1

# Application Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/lawcase_bench"

# JWT Configuration
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (SMTP for fallback)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
SMTP_FROM=noreply@lawcasebench.com