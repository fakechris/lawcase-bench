# Test Environment Variables
NODE_ENV=test
PORT=3001
FRONTEND_URL=http://localhost:3000

# Test Database (SQLite for testing)
DATABASE_URL="file:./dev-test.db"

# JWT Configuration for tests
JWT_SECRET=test-jwt-secret-for-testing-only
